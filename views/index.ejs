<%- include('./partials/header') %>

<% if (success) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 px-4 py-3 rounded-lg bg-green-500 shadow-lg">
        <span class="text-white font-medium">
            <i class="ri-check-circle-line mr-2"></i><%= success %>
        </span>
    </div>
<% } %>

<% if (error) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 px-4 py-3 rounded-lg bg-red-500 shadow-lg">
        <span class="text-white font-medium">
            <i class="ri-error-warning-line mr-2"></i><%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20 gap-10">
    <!-- USER REGISTER -->
    <div class="w-1/3 flex items-center justify-center h-screen">
        <div class="w-full px-10">
            <h3 class="text-4xl">welcome to <span class="text-blue-400 font-semibold">ShopSphere</span></h3>
            <h4 class="text-2xl mb-5">create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="Full Name" name="fullname">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>

    <!-- USER LOGIN -->
    <div class="w-1/3 flex items-center justify-center h-screen">
        <div class="w-full px-10">
            <h4 class="text-2xl capitalize mb-5">login your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                    value="Login">
            </form>
        </div>
    </div>

    <!-- ADMIN LOGIN -->
    <div class="w-1/3 flex items-center justify-center h-screen">
        <div class="w-full px-10">
            <h4 class="text-2xl capitalize mb-5">admin login</h4>
            <form autocomplete="off" action="/owners/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Admin Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Admin Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-red-500 text-white" type="submit"
                    value="Admin Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
